<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/green">

    <TableRow
        android:background="@color/Tomato">


        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="@string/title_string"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.041"
            android:background="@color/colorPrimary"
            android:textColor="@color/HotPink"
            android:padding="50px"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/teamA_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:gravity="right"
            android:minWidth="150dp"
            android:paddingLeft="200px"
            android:text="@string/teamA_title_string"
            android:textColor="@color/green"
            android:textSize="28sp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="112dp" />

        <TextView
            android:id="@+id/teamB_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Tomato"
            android:minWidth="150dp"
            android:paddingLeft="70px"
            android:text="@string/teamB_title_string"
            android:textColor="@color/Black"
            android:textSize="28sp"
            tools:layout_editor_absoluteX="263dp"
            tools:layout_editor_absoluteY="112dp" />


        <TextView
            android:id="@+id/teamA_score_textview"
            android:layout_width="47dp"
            android:layout_height="80dp"
            android:background="@color/pitch"
            android:gravity="left"
            android:paddingLeft="4dp"
            android:text="10"
            android:textColor="@color/NavajoWhite"
            android:textSize="28sp"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="186dp" />

        <TextView
            android:id="@+id/teamB_score_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Moccasin"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="10"
            android:textColor="@color/DarkOrange"
            android:textSize="28sp"
            tools:layout_editor_absoluteX="294dp"
            tools:layout_editor_absoluteY="186dp" />
    </TableRow>

    <TableRow
        android:layout_height="43dp"
        android:background="@color/HotPink">

        <Button
            android:id="@+id/increase_TeamA_Button3"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/DarkViolet"
            android:text="@string/increase_string"
            android:textStyle="bold"
            android:textColor="@color/LightSalmon"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="267dp" />

    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/decrease_TeamA_Button"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:background="@color/PeachPuff"
            android:text="@string/decrease_string"
            android:textColor="@color/Black"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="362dp" />

        <Button
            android:id="@+id/decrease_TeamB_Button"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:background="@color/Gold"
            android:text="@string/decrease_string"
            android:textColor="@color/HotPink"
            tools:layout_editor_absoluteX="271dp"
            tools:layout_editor_absoluteY="362dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <RadioGroup
            android:layout_width="146dp"
            android:background="@color/Black">

            <RadioButton
                android:layout_width="139dp"
                android:layout_height="82dp"
                android:background="@color/PeachPuff"
                android:paddingRight="10dp"
                android:textSize="32dip"
                android:paddingBottom="30"
                android:text="@string/radio1" />

            <RadioButton
                android:layout_width="188dp"
                android:layout_height="54dp"
                android:layout_gravity="left"
                android:background="@color/PaleGreen"
                android:paddingRight="80dp"
                android:text="@string/radio2"
                android:textSize="32dip"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:background="@color/brown"
                android:paddingRight="100dp"
                android:text="3pt"
                android:textSize="32dip"
                android:textColor="@color/NavajoWhite" />
        </RadioGroup>

        <Button
            android:id="@+id/increase_TeamB_Button"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@color/PaleGreen"
            android:text="@string/increase_string"
            android:textColor="@color/LightSalmon"
            tools:layout_editor_absoluteX="271dp"
            tools:layout_editor_absoluteY="267dp" />

    </TableRow>
</TableLayout>